<%- include ../partials/header.ejs %>

<main class="container">
    <h1>Article Details</h1>
    <form method="post" action="<% article._id %>">
        <fieldset class="form-group">
            <label for="title">Title:*</label>
            <input type="text" name="title" required value="<%= article.title %>" required>
        </fieldset>
        <fieldset class="form-group">
            <label for="content">Content:*</label>
            <textarea type="text" name="content" required> <%= article.content %> </textarea>
        </fieldset>
        <button class="btn btn-primary" type="submit">Save</button>

        <a href="/articles/delete/<%= article._id %>" title="delete" class="confirmation">
            <button class="btn btn-danger" type="button">Delete</button>
        </a>

    </form>
</main>
<%- include ../partials/footer.ejs %>